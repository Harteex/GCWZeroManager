<Window x:Class="GCWZeroManager2.PasswordInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Passphrase" Height="148" Width="220" ResizeMode="NoResize" Topmost="True" ShowInTaskbar="False">
    <Grid FocusManager.FocusedElement="{Binding ElementName=passwordBox}">
        <Label Content="A passphrase is required for this key" Height="28" HorizontalAlignment="Stretch" Margin="2,5,2,0" Name="label1" VerticalAlignment="Top" />
        <Grid Height="40" HorizontalAlignment="Stretch" Margin="2,30,2,0" Name="grid1" VerticalAlignment="Top">
            <PasswordBox Height="23" HorizontalAlignment="Stretch" Margin="77,8,5,0" Name="passwordBox" VerticalAlignment="Top" />
            <Label Content="Passphrase:" Height="28" HorizontalAlignment="Left" Margin="0,6,0,0" Name="label2" VerticalAlignment="Top" />
        </Grid>
        <Grid Height="23" HorizontalAlignment="Stretch" Margin="2,79,2,0" Name="grid2" VerticalAlignment="Top" Width="155">
            <Button Content="Ok" Height="23" HorizontalAlignment="Left" Margin="0,0,0,0" Name="buttonOk" VerticalAlignment="Top" Width="75" IsDefault="True" Click="buttonOk_Click" />
            <Button Content="Cancel" Height="23" HorizontalAlignment="Left" Margin="80,0,0,0" Name="buttonCancel" VerticalAlignment="Top" Width="75" IsCancel="True" />
        </Grid>
    </Grid>
</Window>
